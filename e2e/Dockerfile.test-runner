FROM golang:1.23-alpine AS builder

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
# Allow Go to auto-download newer toolchain if needed
ENV GOTOOLCHAIN=auto
RUN go mod download

# Copy source code
COPY e2e/ ./e2e/
COPY pkg/ ./pkg/

# Build test-runner
RUN go build -o test-runner ./e2e/cmd/test-runner

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /build/test-runner .

ENTRYPOINT ["./test-runner"]
